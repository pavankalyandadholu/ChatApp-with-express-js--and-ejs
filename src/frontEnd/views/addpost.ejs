<section class=" h-[80vh] w-full flex items-center justify-center">
    <div class=" border  p-6 border-pink-600 rounded-md shadow-md">
        <h2 class=" text-xl font-semibold text-center mb-3">Add Post </h2>
        <% if(msg){%>
            <p class=" text-center text-lg"><%=msg%></p>
       <% }%>
        <p></p>
        <form action="/addpost" method="post" enctype="multipart/form-data">
            <div class="flex flex-col mb-2">
                <label for="caption">Caption</label>
                <input class=" px-2 py-1 outline-none border-b border-blue-600 text-lg" type="text" name="caption" id="caption">
            </div>
            <div class="flex flex-col mb-2 ">
                <label for="imageUrl">Image</label>
                <input class=" px-2 py-1 outline-none border-b border-blue-600 text-lg"  type="file" name="imageUrl" id="imageUrl" type="image">
            </div>
            <button class=" text-lg px-2 py-1 outline-none border rounded-lg mx-auto mt-3 border-blue-600 hover:bg-blue-500">Submit</button>
        </form>
    </div>
</section>